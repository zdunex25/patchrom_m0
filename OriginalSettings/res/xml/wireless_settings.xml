<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/wireless_networks_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/status_operator" />
    <CheckBoxPreference android:persistent="false" android:title="@string/airplane_mode" android:key="toggle_airplane" android:disableDependentsState="true" />
    <PreferenceScreen android:title="@string/network_settings_title" android:key="mobile_network_settings" android:dependency="toggle_airplane">
        <intent android:targetPackage="com.android.phone" android:action="android.intent.action.MAIN" android:targetClass="com.android.phone.MobileNetworkSettings" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/auto_power_on_off" android:key="auto_power_on_off_mode" android:fragment="com.android.settings.autopoweronoff.AutoPowerOnOffSettings">
        <intent android:targetPackage="com.android.OriginalSettings" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings.autopoweronoff.AutoPowerOnOffSettings" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/tether_settings_title_all" android:key="tether_settings" android:summary="@string/tether_settings_summary_all" android:fragment="com.android.OriginalSettings.TetherSettings" />
    <PreferenceScreen android:title="@string/wimax_settings" android:key="wimax_settings" android:summary="@string/wimax_settings_summary">
        <intent android:targetPackage="com.android.settings.wimax" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings.wimax.WimaxSettings" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/vpn_settings_title" android:key="vpn_settings" android:summary="@string/vpn_settings_summary" android:fragment="com.android.OriginalSettings.vpn2.VpnSettings" />
    <PreferenceScreen android:title="@string/vpn_settings_title" android:key="vpn_settings_for_att" android:summary="@string/vpn_settings_summary" android:fragment="com.android.OriginalSettings.vpn2.VpnSettingsForATT" />
    <CheckBoxPreference android:persistent="false" android:title="@string/nsd_quick_toggle_title" android:key="toggle_nsd" android:summary="@string/nsd_quick_toggle_summary" />
    <PreferenceScreen android:title="@string/roaming_settings_title" android:key="roaming_settings" android:summary="@string/roaming_settings_summary" android:dependency="toggle_airplane">
        <intent android:targetPackage="com.android.phone" android:action="android.intent.action.MAIN" android:targetClass="com.android.phone.Roaming" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/proxy_settings_title" android:key="proxy_settings" android:fragment="com.android.OriginalSettings.ProxySelector" />
    <PreferenceScreen android:title="@string/cell_broadcast_settings" android:key="cell_broadcast_settings" android:summary="@string/cell_broadcast_settings_summary">
        <intent android:targetPackage="com.android.cellbroadcastreceiver" android:action="android.intent.action.MAIN" android:targetClass="com.android.cellbroadcastreceiver.CellBroadcastSettings" />
    </PreferenceScreen>
    <PreferenceCategory android:title="@string/transfer_title" android:key="transfer_category">
        <SwitchPreferenceScreen android:title="@string/nfc_quick_toggle_title" android:key="toggle_nfc" android:summary="@string/nfc_quick_toggle_summary" android:fragment="com.android.OriginalSettings.nfc.NfcSettings" />
        <SwitchPreferenceScreen android:title="@string/s_beam_settings_title" android:key="s_beam_settings" android:summaryOn="@string/s_beam_on_summary" android:summaryOff="@string/s_beam_off_summary" android:fragment="com.android.OriginalSettings.nfc.SBeam" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/media_share_title" android:key="media_share_category">
        <PreferenceScreen android:title="@string/allshare_nearby" android:key="nearby_settings" android:summary="@string/allshare_title_summary" android:fragment="com.android.OriginalSettings.nearby.NearbySettings" />
        <PreferenceScreen android:title="@string/wfd_settings_title" android:key="allshare_cast_settings" android:summary="@string/wfd_settings_summary" android:fragment="com.android.OriginalSettings.wfd.WfdPickerActivity" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/kies_title" android:key="kies_category">
        <PreferenceScreen android:title="@string/kies_via_wifi" android:key="kies_via_wifi" android:summary="@string/kies_via_wifi_summary">
            <intent android:targetPackage="com.sec.android.app.kieswifi" android:action="android.intent.action.MAIN" android:targetClass="com.sec.android.app.kieswifi.ui.KiesLauncher" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
